import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
//gerekli kutuphaneler dahil edildi.
public class HesabaGirisArayuz {
    //degisken private tanimlandi.
    private static String olusmaad;
    private static String olusmasifre;
    private static String adi;
    private static String passwordText;

    public static void main(String[] args) {
        HesapOlusturmaArayuz a=new HesapOlusturmaArayuz();
        olusmaad=a.getAdi();
        olusmasifre=a.getPasswordText();
        //getter metodu ile degisken degerleri alindi.
        //arayuz olusturuldu.
        JFrame frame4 = new JFrame("Hesaba giris");
        //gererkli olan bilesenler swing yardımıyla tanımlandı.
        JLabel text = new JLabel("HESABA GIRIS");
        text.setFont(new Font("Serif", Font.BOLD, 20));
        text.setBounds(100, 70, 250, 50);

        JLabel kullanici = new JLabel();
        kullanici.setText("Kullanici Adi: ");
        kullanici.setFont(new Font("Monospaced", Font.BOLD, 15));
        kullanici.setBounds(100, 150, 150, 50);


        JLabel sifre = new JLabel();
        sifre.setText("Sifre: ");
        sifre.setFont(new Font("Monospaced", Font.BOLD, 15));
        sifre.setBounds(100, 200, 150, 50);

        JTextField ad = new JTextField();
        ad.setFont(new Font("Monospaced", Font.BOLD, 15));
        ad.setBounds(230, 170, 200, 18);

        //sifre icin bilesen tanimlandı.
        JPasswordField password = new JPasswordField();
        password.setFont(new Font("Monospaced", Font.BOLD, 15));
        password.setBounds(160, 220, 150, 18);


        JButton giris = new JButton();
        giris.setText("GIRIS");
        giris.setFont(new Font("Monospaced", Font.BOLD, 15));
        giris.setBounds(200, 400, 150, 50);
        giris.setBackground(Color.green);
        //butona basildigi anda olusacak durumlar yazildi.
        giris.addActionListener(new ActionListener() {


            @Override
            public void actionPerformed(ActionEvent e) {
                //ad ve sifre kontrolu yapıldı.
                adi = ad.getText();
                passwordText = new String(password.getPassword());
                if (olusmaad.equals(adi) && olusmasifre.equals(passwordText)) {
                    Arayuz.main(args);
                    //pencerelerı kapattık
                    frame4.dispose();
                }
                else {
                    //bilgi kutucugu ile erkana uyarilar verdik.
                    JOptionPane uyari=new JOptionPane();
                    JOptionPane.showMessageDialog(uyari,"Kullanici adi veya sifre hatali","Hatali giris",JOptionPane.WARNING_MESSAGE);
                    uyari.setFont(new Font("Monospaced", Font.BOLD, 15));
                    frame4.add(uyari);
                }



            }

        });
        //butun bilesneleri frame ekledik ve renk ayarları yapıldı.
        frame4.getContentPane().setBackground(Color.YELLOW);
        frame4.add(giris);
        frame4.add(text);
        frame4.add(password);
        frame4.add(ad);
        frame4.add(sifre);
        frame4.add(kullanici);
        frame4.setSize(600, 600);
        frame4.setLayout(null);
        frame4.setVisible(true);


    }
    //setter ve getter metodları tanımlandı.
    public  String getOlusmaad() {
        return olusmaad;
    }

    public  void setOlusmaad(String olusmaad) {
        HesabaGirisArayuz.olusmaad = olusmaad;
    }

    public  String getOlusmasifre() {
        return olusmasifre;
    }

    public  void setOlusmasifre(String olusmasifre) {
        HesabaGirisArayuz.olusmasifre = olusmasifre;
    }
}
